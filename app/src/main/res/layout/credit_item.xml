<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_movie_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_4dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/padding_0dp"
    card_view:cardElevation="@dimen/padding_1dp">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/character_thumbnail"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/progress_bar_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/original_name"
                android:textSize="@dimen/font_18sp"
                android:textColor="@color/primaryText"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/original_name"
                android:id="@+id/character_name"
                android:textSize="@dimen/font_15sp"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/secondaryText"/>

        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>